datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  address     String   @unique
  name        String?
  createdPages Page[]
}

model Page {
  id        Int    @id @default(autoincrement())
  title     String
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
}
